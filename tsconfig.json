{
    "compilerOptions": {
        "allowJs": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "target": "esnext",
        "module": "esnext"
    },
    "fmt": {
        "options": {
            "useTabs": false,
            "lineWidth": 240,
            "indentWidth": 4,
            "singleQuote": true,
            "proseWrap": "preserve"
        }
    }
}
